{
  "kind": "collectionType",
  "collectionName": "subscribers",
  "info": {
    "singularName": "subscriber",
    "pluralName": "subscribers",
    "displayName": "Subscriber",
    "description": "Collection of email subscribers from the blog"
  },
  "options": {
    "draftAndPublish": false
  },
  "attributes": {
    "email": {
      "type": "email",
      "required": true,
      "unique": true
    },
    "source": {
      "type": "string",
      "required": true
    },
    "subscribed": {
      "type": "boolean",
      "default": true,
      "required": true
    },
    "subscribedAt": {
      "type": "datetime",
      "required": true,
      "default": "now"
    }
  }
} 